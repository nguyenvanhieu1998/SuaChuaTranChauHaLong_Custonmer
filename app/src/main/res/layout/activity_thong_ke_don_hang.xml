<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--    <LinearLayout-->
    <!--        android:layout_weight="0.6"-->
    <!--        android:weightSum="5"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="0dp">-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ActivityThongKeHoaDon_toolbar"
        android:layout_width="match_parent"
        app:subtitleTextColor="#FFFFFF"
        app:titleTextColor="#FFFFFF"
        android:background="#0923B1"
        android:layout_height="?actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/ActivityThongKeHoaDon_txtTottalOrder"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="Tổng số hóa đơn : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
        <TextView
            android:id="@+id/ActivityThongKeHoaDon_txtOrderCancel"
            android:textSize="15sp"
            android:textColor="#000000"
            android:text="Đơn hàng bị hủy : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/ActivityThongKeHoaDon_txtOrderShipped"
            android:textSize="15sp"
            android:textColor="#000000"
            android:text="Đơn hàng đã giao : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_gravity="center_horizontal"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="60dp"
        />
</LinearLayout>