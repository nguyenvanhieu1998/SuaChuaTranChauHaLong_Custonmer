<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="8dp"
    android:weightSum="10"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/itemCustomer_imageCustomer"
        android:src="@drawable/ic_ship"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="65dp">
    </de.hdodenhof.circleimageview.CircleImageView>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Họ tên khách hàng"
            android:id="@+id/itemCustomer_txtNameCustomer"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/itemCustomer_txtSexCustomer"
            android:text="Giới tính"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
<!--        <TextView-->
<!--            android:id="@+id/itemCustomer_txtOrderOfCustomer"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:text="Đã mua : 15 đơn hàng "-->
<!--            android:textSize="14sp"-->
<!--            android:layout_height="wrap_content">-->
<!--        </TextView>-->
    </LinearLayout>
</LinearLayout>
