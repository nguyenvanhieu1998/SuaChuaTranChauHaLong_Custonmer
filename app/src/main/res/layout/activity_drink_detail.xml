<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ActivityDrinkDetail_toolbar"
        android:layout_width="match_parent"
        app:subtitleTextColor="#FFFFFF"
        app:titleTextColor="#FFFFFF"
        android:background="#0923B1"
        android:layout_height="?actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:id="@+id/ACtivityDrinkDetail_imgDrink"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="120dp"
        android:layout_height="200dp">
    </ImageView>
    <TextView
        android:id="@+id/ACtivityDrinkDetail_txtNameDrink"
        android:text="Sữa chua matcha"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/ACtivityDrinkDetail_txtPriceDrink"
        android:text="Giá : 25000"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <ImageView
        android:id="@+id/ACtivityDrinkDetail_imgLove"
        android:src="@drawable/ic_baseline_favorite_border_24_fragmentorder"
        android:layout_marginLeft="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageView>
    </LinearLayout>
    <TextView
        android:text="Gọi thêm"
        android:textSize="18sp"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/ACtivityDrinkDetail_checkBoxTranChau"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:text="Trân châu">
        </CheckBox>
            <TextView
                android:layout_weight="2"
                android:text="5000đ"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/ACtivityDrinkDetail_checkBoxThachRauCau"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:text="Thạch rau câu">
            </CheckBox>
            <TextView
                android:layout_weight="2"
                android:text="5000đ"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/ACtivityDrinkDetail_checkBoxDuaKho"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:text="Dừa khô">
            </CheckBox>
            <TextView
                android:layout_weight="2"
                android:text="5000đ"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/ACtivityDrinkDetail_checkBoxChuoiKho"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:text="Chuối khô">
            </CheckBox>
            <TextView
                android:layout_weight="2"
                android:text="5000đ"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/ACtivityDrinkDetail_checkBoxNhoKho"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:text="Nho khô">
            </CheckBox>
            <TextView
                android:layout_weight="2"
                android:text="5000đ"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/ACtivityDrinkDetail_frameDatHang"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:weightSum="10"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ACtivityDrinkDetail_imgMinus"
            android:src="@drawable/ic_baseline_remove_circle_24"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
        </ImageView>
        <TextView
            android:id="@+id/ACtivityDrinkDetail_txtMountDrink"
            android:text="1"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:layout_height="wrap_content">
        </TextView>
        <ImageView
            android:id="@+id/ACtivityDrinkDetail_imgPlus"
            android:src="@drawable/ic_baseline_add_circle_24_addmount"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
        </ImageView>
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </FrameLayout>
        <Button
            android:id="@+id/ACtivityDrinkDetail_btnTotalMoney"
            android:text="+ 25000đ"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </Button>
    </LinearLayout>
    </LinearLayout>
</ScrollView>