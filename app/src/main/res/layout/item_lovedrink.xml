<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/itemLoveDrink_imgDrink"
        android:src="@drawable/ic_ship"
        android:layout_width="40dp"
        android:layout_height="60dp">
    </ImageView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="240dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/itemLoveDrink_txtNameDrink"
            android:text="Tên drink"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/itemLoveDrink_txtPriceDink"
            android:text="Giá"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <ImageView
        android:id="@+id/itemLoveDrink_imgDelete"
        android:layout_width="20dp"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_marginTop="25dp"
        android:layout_height="20dp">
    </ImageView>
</LinearLayout>