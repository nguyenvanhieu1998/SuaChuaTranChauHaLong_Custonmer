<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/itemLoveDrink_imgDrink"
        android:src="@drawable/ic_ship"
        android:layout_width="50dp"
        android:layout_height="50dp">
    </ImageView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/itemLoveDrink_txtNameDrink"
            android:text="Tên drink"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/itemLoveDrink_txtPriceDink"
            android:text="Giá"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <ImageView
        android:id="@+id/itemLoveDrink_imgDelete"
        android:layout_width="wrap_content"
        android:layout_marginLeft="200dp"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
    </ImageView>
</LinearLayout>