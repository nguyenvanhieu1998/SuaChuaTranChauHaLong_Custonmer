<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/ActivityListMyOrder_txtTittle"
        android:textColor="#000000"
        android:textSize="20sp"
        android:visibility="invisible"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="25dp"
        android:text="Hiện tại không có đơn hàng nào"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ActivityListMyOrder_toolbar"
        android:layout_width="match_parent"
        app:subtitleTextColor="#FFFFFF"
        app:titleTextColor="#FFFFFF"
        android:background="#0923B1"
        android:layout_height="?actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_weight="0.7"
        android:layout_marginHorizontal="9dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:text="Trạng thái :"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <Spinner
            android:id="@+id/ActivityListMyOrder_spinnerStatus"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">
        </Spinner>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ActivityListMyOrder_recycleViewOrder"
        android:layout_weight="9.3"
        android:scrollbars="vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>
</RelativeLayout>