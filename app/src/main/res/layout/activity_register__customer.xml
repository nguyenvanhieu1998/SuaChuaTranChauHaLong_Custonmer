<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:weightSum="9"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_weight="4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_suachua">
    </ImageView>

    <EditText
        android:id="@+id/ActivityRegisterCustomer_edtPhone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Nhập email của bạn"
      />

    <EditText
        android:id="@+id/ActivityRegisterCustomer_edtPass"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Nhập mật khẩu "
        android:textColor="#39393C"
        android:layout_marginHorizontal="20dp"
        />
    <EditText
        android:id="@+id/ActivityRegisterCustomer_edtRePass"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Nhập lại mật khẩu "
        android:textColor="#39393C"
        android:layout_marginHorizontal="20dp"
         />




    <Button
        android:id="@+id/ActivityRegisterCustomer_btnRegister"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#FCFCFC"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/botron_button"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="Đăng ký" />

    <TextView
        android:id="@+id/ActivityRegisterCustomer_txtRedirectLogin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:textColor="#39393C"
        android:gravity="center_horizontal"
        android:text="Bạn đã có tài khoản ? Đăng nhập" />
</LinearLayout>