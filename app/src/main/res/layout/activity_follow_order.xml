<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ActivityFollowOrder_toolbar"
        android:layout_width="match_parent"
        app:subtitleTextColor="#FFFFFF"
        app:titleTextColor="#FFFFFF"
        android:background="#0923B1"
        android:layout_height="?actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <fragment
        android:id="@+id/myMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="420dp">
    </fragment>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--        <TextView-->
        <!--            android:id="@+id/ActivityFollowOrder_txtIdOrder"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:text="Mã đơn hàng"-->
        <!--            android:textColor="#070707"-->
        <!--            android:textSize="16sp"-->
        <!--            android:textStyle="bold"-->
        <!--            android:layout_marginLeft="10dp"-->
        <!--            android:layout_marginTop="10dp"-->
        <!--            android:layout_height="wrap_content">-->
        <!--        </TextView>-->
        <TextView
            android:id="@+id/ActivityFollowOrder_txtTittle"
            android:layout_width="wrap_content"
            android:text="Thông tin Shipper"
            android:textColor="#070707"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/ActivityFollowOrder_txtName"
            android:layout_width="wrap_content"
            android:text="Họ tên : "
            android:textColor="#070707"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Số điện thoại : "
                android:textColor="#070707"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/ActivityFollowOrder_txtPhone"
                android:layout_width="wrap_content"
                android:textStyle="italic"
                android:textDirection="locale"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Số điện thoại"
                android:textColor="#0E6AB3"
                android:textSize="14sp"></TextView>
        </LinearLayout>
    </LinearLayout>
