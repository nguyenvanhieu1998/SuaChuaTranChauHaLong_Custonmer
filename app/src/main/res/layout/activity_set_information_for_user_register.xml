<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_weight="3"
        android:src="@drawable/ic_photo_camera_black_24dp"
        android:id="@+id/ActivitySetInformationForUserRegister_imgFaceUserCurrent"
        android:layout_height="0dp">
    </de.hdodenhof.circleimageview.CircleImageView>
    <LinearLayout
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/ActivitySetInformationForUserRegister_imgCamera"
            android:src="@drawable/ic_photo_camera_black_24dp"
            android:layout_width="25dp"
            android:layout_height="20dp" />
        <ImageView
            android:id="@+id/ActivitySetInformationForUserRegister_imgFolder"
            android:src="@drawable/ic_folder_open_black_24dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="7.5"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="0dp">
        <EditText
            android:id="@+id/ActivitySetInformationForUserRegister_edtName"
            android:hint="Nhập họ tên"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        </EditText>
        <TextView
            android:text="Giới tính "
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <RadioGroup
            android:id="@+id/ActivitySetInformationForUserRegister_radioGroupSex"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:text="Nam"
                android:id="@+id/ActivitySetInformationForUserRegister_rdbMen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </RadioButton>
            <RadioButton
                android:text="Nữ"
                android:id="@+id/ActivitySetInformationForUserRegister_rdbGirl"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </RadioButton>
        </RadioGroup>
        <EditText
            android:id="@+id/ActivitySetInformationForUserRegister_edtPhone"
            android:hint="Nhập số điện thoại"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_height="40dp">
        </EditText>
        <EditText
            android:id="@+id/ActivitySetInformationForUserRegister_edtAddress"
            android:hint="Nhập địa chỉ"
            android:layout_width="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_height="40dp">
        </EditText>
        <Button
            android:id="@+id/ActivitySetInformationForUserRegister_btnUpdate"
            android:text="Cập nhật"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
        </Button>
    </LinearLayout>
</LinearLayout>