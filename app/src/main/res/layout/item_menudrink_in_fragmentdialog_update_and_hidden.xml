<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:weightSum="10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/FragmentDialogUpdateAndHiddenMenuDrink_itemMenuDrink_imgMenuDrink"
        android:src="@drawable/ic_ship"
        android:layout_width="0dp"
        android:layout_weight="1.7"
        android:layout_height="40dp">
    </ImageView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/FragmentDialogUpdateAndHiddenMenuDrink_itemMenuDrink_txtNameMenuDrink"
            android:text="Tên menu drink"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/FragmentDialogUpdateAndHiddenMenuDrink_itemMenuDrink_txtDateCreteMenuDrink"
            android:text="Số lượng"
            android:textSize="12sp"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
</LinearLayout>
