<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/FragmentOrder_txtTittle"
        android:text="Menu"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textDirection="locale"
        android:layout_width="wrap_content"
        android:layout_height="50dp">
    </TextView>
    <androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/FragmentOrder_recycleViewMenuDrink"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/FragmentOrder_floatingActionButtonListener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        android:visibility="invisible"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTintMode="src_atop"
        android:backgroundTint="#35ABE0"
        android:src="@drawable/ic_baseline_adjust_24" />
        <include layout="@layout/fab_layout"></include>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>