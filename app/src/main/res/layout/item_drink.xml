<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="165dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/custome_backgroud_item_drink"
    android:layout_marginVertical="5dp"
    android:padding="10dp"
    android:layout_marginLeft="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/itemDrink_imageDrink"
       android:src="@drawable/suachuabo"
        android:layout_width="80dp"
        android:layout_gravity="center"
        android:layout_height="140dp">
    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/itemDrink_txtNameDrink"
        android:text="Sữa chua trân châu xoài"
        android:textSize="13sp"
        android:textColor="#050505"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/itemDrink_txtPriceDrink"
        android:text="Price"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/itemDrink_imgUpdate"
            android:layout_gravity="right"
            android:visibility="invisible"
            android:src="@drawable/ic_baseline_system_update_alt_24_item_drink"
            android:layout_width="20dp"
            android:layout_height="20dp">
        </ImageView>
        <ImageView
            android:visibility="invisible"
            android:id="@+id/itemDrink_imgHidden"
            android:src="@drawable/ic_baseline_delete_outline_24_item_drink"
            android:layout_width="20dp"
            android:layout_height="20dp">
        </ImageView>
    </LinearLayout>
</LinearLayout>