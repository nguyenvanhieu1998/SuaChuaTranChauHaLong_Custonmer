        <LinearLayout android:layout_width="match_parent"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android">>
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/FragmentDialogUpdateDrinkOfCart_imgDrink"
                android:layout_width="100dp"
                android:src="@color/colorPrimary"
                android:layout_height="170dp">
            </ImageView>
            <TextView
                android:id="@+id/FragmentDialogUpdateDrinkOfCart_txtNameDrink"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:text="Tên đồ uống "
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/FragmentDialogUpdateDrinkOfCart_txtMountDrink"
                android:textSize="14sp"
                android:text="Số lượng "
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/FragmentDialogUpdateDrinkOfCart_txtBonus"
                android:textSize="14sp"
                android:text="Gọi thêm "
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView

                    android:id="@+id/FragmentDialogUpdateDrinkOfCart_imgMinus"
                    android:src="@drawable/ic_baseline_remove_circle_24"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:id="@+id/FragmentDialogUpdateDrinkOfCart_txtMount2"
                    android:text="1"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_width="50dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:id="@+id/FragmentDialogUpdateDrinkOfCart_imgPlus"
                    android:src="@drawable/ic_baseline_add_circle_24_addmount"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_height="wrap_content">
                </ImageView>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/FragmentDialogUpdateDrinkOfCart_btnUpdate"
                    android:text="Cập nhật"
                    android:textSize="13sp"
                    android:layout_margin="5dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/custome_button_dathang"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" />
                <Button
                    android:id="@+id/FragmentDialogUpdateDrinkOfCart_btnDelete"
                    android:text="Xóa"
                    android:layout_margin="5dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/custome_button_dathang"
                    android:textAllCaps="false"
                    android:layout_height="50dp"
                    android:layout_width="80dp"
                    android:textSize="13sp"
                    android:layout_toRightOf="@+id/FragmentDialogUpdateDrinkOfCart_btnUpdate"/>
                <Button
                    android:id="@+id/FragmentDialogUpdateDrinkOfCart_btnCancel"
                    android:text="Hủy"
                    android:layout_margin="5dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/custome_button_dathang"
                    android:textAllCaps="false"
                    android:layout_height="50dp"
                    android:layout_width="120dp"
                    android:textSize="13sp"
                    android:layout_toRightOf="@+id/FragmentDialogUpdateDrinkOfCart_btnDelete"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
