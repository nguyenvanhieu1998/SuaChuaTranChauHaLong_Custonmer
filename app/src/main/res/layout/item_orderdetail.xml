<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:weightSum="10"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/itemOrderDetail_imgOrder"
        android:src="@drawable/ic_ship"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="50dp">
    </ImageView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="5.2"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/itemOrderDetail_txtNameDrink"
            android:text="Tên drink"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/itemOrderDetail_txtMountDrink"
            android:text="Số lượng"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
<!--        <TextView-->
<!--            android:id="@+id/itemOrderDetail_txtBouns"-->
<!--            android:text="Gọi thêm : "-->
<!--            android:textSize="12sp"-->
<!--            android:layout_marginLeft="3dp"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content">-->
<!--        </TextView>-->
    </LinearLayout>
    <TextView
        android:id="@+id/itemOrderDetail_txtTotalPriceDrink"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:text="Price"
        android:textSize="13sp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">
    </TextView>
</LinearLayout>
    <TextView
        android:id="@+id/itemOrderDetail_txtBonus"
        android:text="Gọi thêm"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="20dp"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
</LinearLayout>
